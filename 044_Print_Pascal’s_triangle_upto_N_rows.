#include <stdio.h>

int factorial(int n)
{
    int f = 1;
    for(int i = 1; i <= n; i++)
        f *= i;
    return f;
}

int combination(int n, int r)
{
    return factorial(n) / (factorial(r) * factorial(n - r));
}

int main()
{
    int rows;
    printf("Enter number of rows: ");
    scanf("%d", &rows);

    for(int i = 0; i < rows; i++)
    {
       
        for(int s = 0; s < rows - i - 1; s++)
            printf("  ");

        for(int j = 0; j <= i; j++)
            printf("%4d", combination(i, j));  

        printf("\n");
    }

    return 0;
}

